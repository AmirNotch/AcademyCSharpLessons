<form method="post" asp-action="Edit" asp-controller="Phone">
    <div asp-validation-summary="All" />
    <input type="hidden" asp-for="Id" />
    <label>Product</label>
    <input class="form-control" name="Model" value="@Model.Product" />
    <span asp-validation-for="Product"></span>
    <br />
    <label>Cost</label>
    <input class="form-control" asp-for="Cost" />
    <span asp-validation-for="Cost"></span> <br />
    <input class="btn btn-success" type="submit" title="Save" value="Save" />
    <a class="btn" asp-controller="Phone" asp-action="Index">Back</a>
</form>
