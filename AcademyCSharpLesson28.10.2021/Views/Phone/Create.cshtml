<form method="post" asp-action="Create" asp-controller="Phone">
    <div asp-validation-summary="All" />
    <label>Products</label>
    <input class="form-control" asp-for="Product" />
    <span asp-validation-for="Product"></span>
    <br />
    <label>Cost</label>
    <input class="form-control" asp-for="Cost" />
    <span asp-validation-for="Cost"></span> <br />
    <input class="btn btn-success" type="submit" title="Create" value="Create" />
    <input class="btn btn-danger" type="reset" title="" value="Cancel" />
</form>
