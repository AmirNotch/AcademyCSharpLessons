<form method="post" asp-action="Edit" asp-controller="Store">
    <label>Product</label>
    <input type="hidden" asp-for="Id"/>
    <input class="form-control" asp-for="Product"/>
    <span asp-validation-for="Product"></span>
    <br />
    <label>Cost</label>
    <input class="form-control" asp-for="Cost"/>
    <span asp-validation-for="Cost"></span><br />
    <select class = "form-control" asp-for="StoreCompanyId" asp-items=@Model.Companies></select>
    <span asp-validation-for="Cost"></span><br />
    <input class="btn btn-success" type="submit"/>
    <a class="btn" asp-controller="Store" asp-action="Index">Back</a>
</form>

